<% provide(:title, 'Edit Property') %>

<div class="container">
  <div class="page-header">
    <h1>Edit Property</h1>
  </div>

  <div class="row">
    <div class="span4 offset4">
      <%= form_for(@property) do |f| %>
        <%= render(:partial => 'property_fields', :object => @property,
            :locals => { :f => f, :disable_element => false }) %>
        <br /><br />
          <%= f.submit "Update", class: "btn btn btn-primary" %>
          <%= link_to "Cancel", @property, class: "btn btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
