<% provide(:title, 'All Properties') %>

<div class="container">
  <div class="page-header">
    <h1>All Properties</h1>
  </div>

  <div class='row'>
    <div class="span12">
      <em>
        Click on Property Name link to view or edit a Property.
        <br/>
        Sort multiple columns simultaneously by holding down the shift key and clicking a second, third or even fourth column header.
      </em>

      <br/><br/>

      <%= link_to raw('<i class="icon-plus icon-white"></i> Add Property'), new_property_path, class: "btn btn-small btn-primary pull-left" %>
      
      <a id="clearfilters" href="#" class="btn btn-small btn-info pull-right">
        <i class="icon-refresh icon-white"></i>
        Clear Filters
      </a>

      <br/>

      <table id="propertyTable" class="table table-striped table-bordered tablesorter">
        <thead>
          <tr>
            <th>Property Name</th>
            <th style="text-align:center">ID</th>
            <th>Description</th>
            <th filter-type='ddl'>Related Entity</th>
            <th filter-type='ddl'>Type</th>
            <th filter-type='ddl'>Status</th>
          </tr>
        </thead>

        <tbody>
          <% @properties.each do |property| %>
            <tr>
              <td><%= link_to property.property_name, property %></td>
              <td style="text-align:center"><%= property.property_id %></td>
              <td><%= property.property_desc %></td>
              <td><%= property.related_entity %></td>
              <td><%= property.property_type %></td>
              <td><%= property.property_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
