<% provide(:title, 'All Properties') %>

<div class="container">
  <div class="page-header">
    <h1>All Properties</h1>
  </div>

  <div class='row'>
    <div class="span12">
      <div class="pull-right">
        <p>
          <%= link_to raw('<i class="icon-plus icon-white"></i> Add Property'), new_property_path, class: "btn btn-small btn-primary" %>
        </p>
      </div>

      <em>
        Click on Property Name link to view/edit/delete a Property.
      </em>

      <br/>
      <br/>

      <a id="clearfilters" href="#" class="btn btn-small btn-info pull-right">
        <i class="icon-refresh icon-white"></i>
        Clear Filters
      </a>

      <%= will_paginate %>

      <table id="propertyTable" class="table table-striped table-bordered tablesorter">
        <thead>
          <tr>
            <th>Property Name</th>
            <th style="text-align:center">ID</th>
            <th>Description</th>
            <th filter-type='ddl'>Related Entity</th>
            <th filter-type='ddl'>Type</th>
            <th filter-type='ddl'>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @properties.each do |property| %>
          <tr>
            <td><%= link_to property.property_name, property %></td>
            <td style="text-align:center"><%= property.property_id %></td>
            <td><%= property.property_desc %></td>
            <td><%= property.related_entity %></td>
            <td><%= property.property_type %></td>
            <td><%= property.property_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <%= will_paginate %>

    </div>
  </div>
</div>
