<% provide(:title, 'All Properties') %>

<div class="container">
  <div class="page-header">
    <h1>All Properties</h1>
  </div>

  <div class='row'>
    <div class="span12">
      <strong><em>Click on Property Name link to view additional information or edit a property.</em></strong>

      <div class="pull-right">
        <p>
          <%= link_to "Add Property", new_property_path, class: "btn btn-primary" %>
        </p>
      </div>

      <%= will_paginate %>

      <table id="propertyTable" class="table table-striped table-bordered tablesorter">
        <thead>
          <tr>
            <th>Property Name</th>
            <th style="text-align:center">ID</th>
            <th>Description</th>
            <th>Related Entity</th>
            <th>Type</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @properties.each do |property| %>
          <tr>
            <td><%= link_to property.property_name, property %></td>
            <td style="text-align:center"><%= property.property_id %></td>
            <td><%= property.property_desc %></td>
            <td><%= property.related_entity %></td>
            <td><%= property.property_type %></td>
            <td><%= property.property_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <%= will_paginate %>

    </div>
  </div>
</div>
