<% provide(:title, 'Property Information') %>

<div class="container">
  <div class="page-header">
    <h1>Property Information</h1>
  </div>

  <div class="row">
    <div class="span4 offset4">
      <%= form_for(@property) do |f| %>
        <%= render(:partial => 'property_fields', :object => @property,
            :locals => { :f => f, :disable_element => true }) %>            
        <%= f.label :rec_add_ts, "Record add timestamp" %>
        <%= f.text_field :rec_add_ts, { disabled: true } %>
      <% end %>

      <!-- <% disable_edit_btn = true if @property.related_entity == "Action_Items" %> -->
      <% if @property.related_entity == "Action_Items" %>
        <%= link_to raw('<i class="icon-edit icon-white"></i> Edit'), edit_property_path, class: "btn btn-small btn-primary", :disabled => disable_edit_btn %>
      <% else %>
        <%= link_to raw('<i class="icon-edit icon-white"></i> Edit'), edit_property_path, class: "btn btn-small btn-primary" %>
      <% end %>

      <%= link_to raw('<i class="icon-stop icon-white"></i> Cancel'), properties_path, class: "btn btn-small btn-primary" %>    
    </div>
  </div>
</div>
