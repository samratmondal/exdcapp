<% provide(:title, 'Manage Users') %>

<div class="container">
  <div class="page-header">
    <h1>Manage Users</h1>
  </div>

  <div class='row'>
  	<div class="span8 offset2">
	    <p>
	      <%= link_to "Add User", add_user_path, class: "btn btn-primary" %>
	    </p>
   
	    <table id="users" class="table table-striped table-bordered tablesorter">
	      <thead>
		      <tr>
		        <th>User ID</th>
		        <th>User Name</th>
		        <th>First Name</th>
		        <th>Last Name</th>
		        <th>Admin Flag</th>
		      </tr>
	      </thead>
	      <tbody>
          <% @users.each do |user| %>
		      <tr>
		        <td><%= user.cmmi_user_id %></td>
		        <td><%= user.user_name %></td>
		        <td><%= user.first_name %></td>
		        <td><%= user.last_name %></td>
		        <td><%= user.admin_flag.nil? ? 'N' : user.admin_flag %></td>
		      </tr>
		      <% end %>
		    </tbody>
	    </table>
	  </div>
	</div>
	<br />
</div>
